@using Feedle.Models
@using Feedle.Data
@using System.Text.Json
@using System.Collections
@inject INewsService NewsService;
@inject IUserService UserService;
@inject NavigationManager NavigationManager;

@page "/PostView/{filterBy}/{sortBy}"
<div>
    @if (posts == null)
    {
        <p>
            <em>Loading...</em>
        </p>
    }
    else if (!posts.Any())
    {
        <p>
            <em>There are no posts.</em>
        </p>
    }
    else
    {
        @foreach (Post p in displayedPosts)
        {
            <div class="card">
                <div class="card-body">
                    <a href="ReadPost/@p.Id">
                        <h5 class="card-title">@p.Title</h5>
                        <p class="card-text">@p.Content</p>
                    </a>
                    @{
                        var copy = p;
                    }
                    <span>@GetTime(p)</span>
                    <span class=@GetDisplayedThumbUp(copy) @onclick="@(e => ThumbUp(copy))"></span>
                    <span class=@GetDisplayedThumbDown(copy) @onclick="@(e => ThumbDown(copy))"></span>
                    @if (IsAuthor(p))
                    {
                        <span class="oi oi-trash cursor-pointer" @onclick="@(e => DeletePost(copy))"></span>
                    }
                    <a @onclick="@(e => NavigateToProfile(copy))" class="cursor-pointer">
                        <div class="card-footer text-muted">
                            @p.AuthorUserName
                        </div>
                    </a>
                </div>
            </div>
        }
    }
</div>


@code {
    IList<Post> posts;
    List<Post> displayedPosts;
