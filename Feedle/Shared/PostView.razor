    string GetTheImage(Post post)
    {
        int userId = post.UserId;
        string image = UserInformations.FirstOrDefault(i => i.Id == userId).UserImageSrc;
        if (image != null)
        {
            return image;
        }
        return "extra/user-empty-avatar.png";
