@page "/"
<AuthorizeView>
    <Authorized>
        <a type="button" class="btn btn-primary" href="AddPost">Add Post</a>
    </Authorized>
    <NotAuthorized>
        <a type="button" class="btn btn-outline-secondary" href="LogIn">Add Post</a>
    </NotAuthorized>
</AuthorizeView>

<div class="row">
    <div class="col-sm-8">
        <div class="form-row">
            <div class="form-group col">
                <label>Sort by: </label>
                <select class="form-control" @bind="sortBy" style="background-color: #f7f7f7">
                    <option selected value="newestFirst">Newest first</option>
                    <option value="oldestFirst">Oldest first</option>
                </select>
            </div>
            <div class="form-group col">
                <label> Filter by: </label>
                <select class="form-control" @bind="filterBy" style="background-color: #f7f7f7">
                    <option selected value="all">All</option>
                    <option value="onlySubscriptions">Subscriptions only</option>
                </select>
            </div>
        </div>
        <PostView></PostView>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <a href="https://www.rolex.com/">Click here (sponsored)</a>
                <img src="extra/rolex-logo-font-free-download-856x484.jpg" width="100%">
            </div>
        </div>
